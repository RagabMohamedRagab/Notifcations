@model MessageViewModel;
@{
    ViewData["Title"] = "Send To User";
}
<form method="post" asp-area="" asp-controller="Account" asp-action="SendMessage" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group  mt-4">
        <label  class="form-label">Send To</label>
        <select asp-for="UserId" asp-items="ViewBag.Users" class="form-control">
          <option selected disabled>--اختر بني ادم--</option>
      </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group  mt-4">
        <label asp-for="Text" class="form-label">Message</label>
        <textarea asp-for="Text" cols="40" rows="10" class="form-control"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group  mt-4">
        <input type="submit" value="Send" class="btn btn-primary" />
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}